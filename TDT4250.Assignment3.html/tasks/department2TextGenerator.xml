<?xml version="1.0" encoding="UTF-8"?>
<project default="department2TextGenerator" name="TDT4250.Assignment3.html">
    <property name="ECLIPSE_HOME" value="../../../../eclipse/modeling-2019-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="TDT4250.Assignment3.html.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/TDT4250.Assignment3.html/bin"/>
    </path>

    <path id="TDT4250.Assignment3.html.classpath">
        <path refid="TDT4250.Assignment3.html.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="TDT4250.Assignment3.html.libraryclasspath.alljars">
        <pathelement location="../TDT4250.Assignment3.html/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="TDT4250.Assignment3.html.classpath.alljars">
        <path refid="TDT4250.Assignment3.html.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="department2TextGenerator">
        <java classname="TDT4250.Assignment3.html.main.Department2TextGenerator" classpathref="TDT4250.Assignment3.html.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="department2TextGenerator.alljars">
        <java classname="TDT4250.Assignment3.html.main.Department2TextGenerator" classpathref="TDT4250.Assignment3.html.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
